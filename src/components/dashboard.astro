---
import currents from "../components/img/currents.jpg";
import ProgressBar from "../components/react/ProgressBar.jsx";
---
<div class="p-6 bg-black text-white min-h-screen w-full">
  <section class="grid grid-cols-2 gap-4 mb-8">
    <div class="current-session  rounded-xl  w-50 h-60 flex justify-between ">
      <div class="z-1 w-full h-full  flex justify-around"> <div class="relative right-10 top-10 text-black text-3xl font-arial font-bold"><p>Current Sessions</p></div>
      <div class="relative top-40  bg-black rounded xl h-10 w-20 items-center flex justify-center text-white hover:scale-110  ease-in-out hover:shadow-[0_0_15px_3px_rgba(125,139,174,0.8)] transition duration-1000 cursor-pointer"><button>Start</button></div>
      </div>
    </div>
    <div class="practice-card rounded-xl w-50 h-60 flex flex-col justify-between">
      <div class="z-1 w-full h-full flex justify-around"><div class="relative right-10 top-10 text-black text-3xl font-arial font-bold"><p>Practice</p></div> 
      <div class="relative top-40  bg-black rounded xl h-10 w-20 items-center flex justify-center text-white hover:scale-110  ease-in-out hover:shadow-[0_0_15px_3px_rgba(125,139,174,0.8)] transition duration-1000 cursor-pointer"><button >Lesson</button></div>
    </div>
      
    </div>
  </section>

  <section class="mb-8">
    <h2 class="text-xl font-bold mb-4">Based on your Progress</h2>
    <div class="grid grid-cols-2 gap-4">
      <div class="progressbar flex justify-between items-center bg-pink-500 rounded-lg p-4 h-48">
        <div class="w-full"><ProgressBar/></div>
      </div>
      <div class="nextevents flex justify-between items-center bg-teal-500 rounded-lg p-4 ">
        <div class="text-xl font-bold text-white   m-4 p-4 bottom-4 ">Next Events</div>
        <div class="flex justify-between  p-3 m-6 top-4 relative rounded-xl bg-[rgb(20,20,20)] text-center hover:bg-black hover:scale-110 ease-in-out transition duration-1000 bottom-6 cursor-pointer right-8">Events</div>
      </div>
    </div>
  </section>

<section>
  <h1 class="font-bold text-2xl ">Extras</h1>
  <div class="flex space-x-4 overflow-x-auto justify-around text-center">
    <div class="cup min-w-[200px] bg-pink-500 rounded-lg p-4 h-20 flex justify-center items-center cursor-pointer">
      Grammar
      <div class="liquid"></div>
    </div>
    <div class="cup min-w-[200px] bg-teal-500 rounded-lg p-4 flex justify-center items-center cursor-pointer">
      Vocabulary
      <div class="liquid"></div>
    </div>
    <div class="cup min-w-[200px] bg-orange-500 rounded-lg p-4 flex justify-center items-center cursor-pointer">
      Podcasts
      <div class="liquid"></div>
    </div>
    <div class="cup min-w-[200px] bg-yellow-500 rounded-lg p-4 flex justify-center items-center cursor-pointer">
      Reading
      <div class="liquid"></div>
    </div>
  </div>
</section>

</div>

<style>
    .current-session {
        background-image: url("../img/currents.jpg");
        background-size:  100% ;
        background-position: center;
        background-repeat:no-repeat ;
        border:1px solid #ccc;
        
    }
    .practice-card {
        background-image: url("../img/taco.webp");
        background-size:cover ;
        background-position: center;
        background-repeat:no-repeat ;
        border:1px solid red;
        position:relative;
        
        
        
    }
    .nextevents{
        background-image: url("../img/next-events.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        border: 1px solid #ccc;
    }

    .progressbar {
        background-image: url("../img/lilbook.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        border: 1px solid #ccc;
    }
    .cup {
  position: relative;
  overflow: hidden;
  transition: transform 0.3s ease;
}

.cup:hover {
  transform: scale(0.9);
}

.liquid {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 0;
  background: rgba(12, 12, 12, 0.966); /* semi-transparent "fill" */
  border-radius: 0 0 10px 10px;
  pointer-events: none; /* so hover still works */
  transition: height 1.5s ease;
}

/* On hover, liquid fills */
.cup:hover .liquid {
  height: 100%;
}

</style>